<% content_for :title, "Sign up â€” hnote" %>

<div class="max-w-sm mx-auto mt-16">
  <h1 class="font-bold tracking-tighter text-2xl mb-8">Sign up</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :email, class: "block text-sm font-bold mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
          class: "w-full border border-black p-2 text-sm font-mono focus:outline-none" %>
    </div>

    <div>
      <%= f.label :password, class: "block text-sm font-bold mb-1" %>
      <% if @minimum_password_length %>
        <p class="text-xs text-gray-500 mb-1"><%= @minimum_password_length %> characters minimum</p>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password",
          class: "w-full border border-black p-2 text-sm font-mono focus:outline-none" %>
    </div>

    <div>
      <%= f.label :password_confirmation, class: "block text-sm font-bold mb-1" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
          class: "w-full border border-black p-2 text-sm font-mono focus:outline-none" %>
    </div>

    <div>
      <%= f.submit "Sign up", class: "border border-black px-4 py-2 text-sm hover:bg-black hover:text-white transition-colors cursor-pointer" %>
    </div>
  <% end %>

  <div class="mt-6 text-sm space-y-2">
    <%= render "devise/shared/links" %>
  </div>
</div>
